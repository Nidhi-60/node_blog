<%- include('../includes/header') %>

<div class="container">
  <form
    action="/auth/register/"
    method="post"
    class="form-box"
    onsubmit="return checkRegister()"
  >
    <div>
      <h3>Registration</h3>
      <hr />
    </div>
    <div id="errorRegistration"></div>
    <div class="form-group">
      <label for="username">UserName</label
      ><input
        type="text"
        name="username"
        id="registerUsername"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label for="email">E-mail</label
      ><input
        type="text"
        name="email"
        id="registerEmail"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label for="password">Password</label
      ><input
        type="password"
        name="password"
        id="registerPassword"
        class="form-control"
      />
    </div>
    <div>
      <input type="submit" value="Register" class="btn btn-outline-secondary" />
    </div>
  </form>
</div>
<%- include('../includes/footer') %>
